@{
    ViewData["Title"] = "About";
}
<h2 class="text-center">Compound Interest Calculator</h2>
<h3 class="text-center"><em>TIME TO CALCULATE</em></h3>

<p>Use this area to provide additional information.</p>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        Interest Rate: <input type="text" name="interestRate" /><br />
    </div>
    <div class="form-group">
        Times Per Year: <input type="text" name="timesPerYear" /><br />
    </div>
    <div class="form-group">
        Years: <input type="text" name="years" /><br />
    </div>

    <div class="form-group">
        <input type="submit" value="calculate" class="btn btn-default" />
    </div>
</form>